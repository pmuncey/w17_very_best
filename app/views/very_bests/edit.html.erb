<!-- Validation failure messages -->
<% if @very_best.errors.any? %>
  <% @very_best.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Very Best #<%= @very_best.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_very_best/<%= @very_best.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for food_id -->
      <div class="form-group">
        <label for="food_id" class="control-label">
          Food
        </label>

        <input type="text" id="food_id" name="food_id" placeholder="Food" class="form-control" value="<%= @very_best.food_id %>">
      </div>

      <!-- Label and input for venue_id -->
      <div class="form-group">
        <label for="venue_id" class="control-label">
          Venue
        </label>

        <input type="text" id="venue_id" name="venue_id" placeholder="Venue" class="form-control" value="<%= @very_best.venue_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @very_best.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Very Best
      </button>
      or
      <a href="/very_bests/<%= @very_best.id %>">Cancel</a>
    </form>
  </div>
</div>
