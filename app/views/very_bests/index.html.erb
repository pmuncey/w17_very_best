<div class="page-header">
  <h1>
    Very bests
    <a href="/very_bests/new" class="btn btn-lg btn-success">New Very best</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Food</th>
        <th>Venue</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @very_bests.each do |very_best| %>
      <tr>
        <td>
          <% if very_best.food.present? %>
            <a href="/foods/<%= very_best.food.id %>">
              <%= very_best.food.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if very_best.venue.present? %>
            <a href="/venues/<%= very_best.venue.id %>">
              <%= very_best.venue.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if very_best.user.present? %>
            <a href="/users/<%= very_best.user.id %>">
              <%= very_best.user.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/very_bests/<%= very_best.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == very_best.user %>
            <a href="/very_bests/<%= very_best.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_very_best/<%= very_best.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @very_bests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
